{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@env/*": [
        "environments/*"
      ],
      "@shared/*": [
        "/src/shared/*"
      ],
      "@schemas/*": [
        "src/schemas/*"
      ],
      "@interfaces/*": [
        "src/_interfaces/*"
      ],
      "@environments/*": [
        "environments/*"
      ]
    }
  },
}
